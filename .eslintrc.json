{
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals",
    "prettier",
    "plugin:import/typescript"
  ],
  "ignorePatterns": [
    "next.config.js",
    "firebase-messaging-sw.js"
  ],
  "plugins": [
    "unused-imports"
  ],
  "rules": {
    "import/order": [
      "error",
      {
        "alphabetize": {
          "order": "asc"
        }
      }
    ],
    "react/jsx-boolean-value": "error",
    "react/self-closing-comp": [
      "error",
      {
        "component": true,
        "html": true
      }
    ],
    "react/jsx-pascal-case": [
      "error",
      {
        "allowAllCaps": true,
        "ignore": []
      }
    ],
    "@typescript-eslint/no-unused-vars": "off",
    //不要なimportを警告
    // "unused-imports/no-unused-imports": "warn", // "error" でも
    //console.logを警告
    "no-console": [
      "warn",
      {
        "allow": [
          "error"
        ]
      }
    ],
    //分割代入を優先する
    "prefer-destructuring": [
      "error",
      {
        "array": false,
        "object": true
      }
    ],
    //varを禁止
    "no-var": "error",
    //早期リターンさせる
    "no-else-return": "error",
    //厳密等価演算子使用させる
    "eqeqeq": [
      "error",
      "smart"
    ],
    "prefer-template": "error"
  }
}